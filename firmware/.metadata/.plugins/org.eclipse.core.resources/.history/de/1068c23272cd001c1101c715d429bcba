#ifndef INC_GPIO_ELEMENTS_HPP_
#define INC_GPIO_ELEMENTS_HPP_

#include "stm32l4xx_hal.h"

class GpioElement
{
	public:
		bool is_inverted;

		virtual ~GpioElement();

	private:
		bool state;

		const uint32_t pin;

		const GPIO_TypeDef * const port;
};


#endif /* INC_GPIO_ELEMENTS_HPP_ */
