#include "gpio elements.hpp"

GpioOutElement::GpioOutElement(const GPIO_TypeDef * const port, const uint32_t pin) :
							   port(port), pin(pin) { };

void GpioOutElement::activate()
{
	tHAL_GPIO_WritePin((GPIO_TypeDef*)(this->port), this->pin, this->is_inverted ? GPIO_PIN_RESET : GPIO_PIN_SET);
}

void GpioOutElement::deactivate()
{

}

GpioInElement::GpioInElement(const GPIO_TypeDef * const port, const uint32_t pin) :
							 port(port), pin(pin) { }

bool GpioInElement::read()
{

}




